<button id="btnLogout" class="flex justify-center items-center rounded-xl gap-4 px-6 py-2 border w-full border-white h-10 mt-3 transition-transform transform-gpu hover:scale-110">
  Sair
  <img src="/logout-icon.svg" alt="">
</button>

<script>
  // Verificar se há dados de nome e email no localStorage
  const nome = localStorage.getItem('nome');
  const email = localStorage.getItem('email');

  // Exibir os dados nos elementos <span>
  const nomeUserSpan = document.getElementById('nomeUser');
  const emailUserSpan = document.getElementById('emailUser');

  if (nome && email && nomeUserSpan && emailUserSpan) {
    nomeUserSpan.innerHTML = `${nome}`;
    emailUserSpan.innerHTML = `${email}`;
  } else {
    // Se os dados ou os elementos <span> não forem encontrados, redirecione para a página inicial
    window.location.href = "/";
  }

  // Adicionar event listener para o botão de logout
  document.getElementById("btnLogout").addEventListener("click", () => {
    // Limpar os dados do localStorage
    localStorage.removeItem('nome');
    localStorage.removeItem('email');
    // Redirecionar para a página inicial
    window.location.href = "/";
  });
</script>

