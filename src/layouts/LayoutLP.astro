---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-black bg-cover bg-center bg-no-repeat flex justify-center h-screen font-sans text-white">
		<slot />
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');
	
	@font-face {
    font-family: 'Akira Expanded';
    src: url('/akira/AkiraExpanded.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

</style>
